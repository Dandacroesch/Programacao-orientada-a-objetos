import javax.swing.JOptionPane;

public class Atividade06 {
public static void main (String args []) {
String aux;
int n1, n2;
aux = JOptionPane.showInputDialog("Entre com o 1 numero: ");
n1 = Integer.parseInt(aux);

aux = JOptionPane.showInputDialog("Entre com o 2 numero: ");
n2 = Integer.parseInt(aux);

somar(n1, n2);
sub(n1, n2);
divi(n1, n2);
mult(n1, n2);
}
public static void somar(int n1, int n2) {
int resultado;
resultado = n1 + n2;
JOptionPane.showMessageDialog(null,"Resultado da soma: " + resultado);
}
public static void sub(int n1, int n2) {
int resultado;
resultado = n1 - n2;
JOptionPane.showMessageDialog(null,"Resultado da subtração: " + resultado);
}
public static void divi(int n1, int n2) {
int resultado;
resultado = n1 / n2;
JOptionPane.showMessageDialog(null,"Resultado da divisão: " + resultado);
}
public static void mult(int n1, int n2) {
int resultado;
resultado = n1 * n2;
JOptionPane.showMessageDialog(null,"Resultado da multiplicação: " + resultado);
}
}
